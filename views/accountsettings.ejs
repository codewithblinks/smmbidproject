            function handle2FA() {
              let twoFactorEnabled = <%= user.two_factor_enabled ? 'false' : 'true' %>;
              const button = document.getElementById('twofa-button');
              const enableModal = document.getElementById('enable2faModal');
              const disableModal = document.getElementById('disable2faModal');
              const changeEmailBTN = document.getElementById('changeEmailBTN');

              if (enableModal && twoFactorEnabled) {
                fetch('/auth/2fa/setup')
                  .then(response => response.json())
                  .then(data => {
                    document.getElementById('qr-code').src = data.qr;
                    document.getElementById('secret-key').textContent = data.secret;
                  })
                  .catch(error => console.error('Error:', error));
              }

              document.getElementById('preferences').addEventListener('click', function () {
                fetch('/auth/2fa/setup')
                  .then(response => response.json())
                  .then(data => {
                    document.getElementById('qr-code').src = data.qr;
                    document.getElementById('secret-key').textContent = data.secret;
                  })
                  .catch(error => console.error('Error fetching QR code:', error));
              });

              if (button) {
                if (!button.hasListenerAttached) {

                  document.getElementById('verify-2fa-form')?.addEventListener('submit', function (event) {
                    event.preventDefault();
                    handle2FASubmit(button, '/auth/2fa/verify', '2FA has been enabled successfully.', enableModal);
                  });

                  document.getElementById('disable-2fa-form')?.addEventListener('submit', function (event) {
                    event.preventDefault();
                    handle2FASubmit(button, '/auth/2fa/disable', '2FA has been disabled successfully.', disableModal);
                  });

                  button.hasListenerAttached = true;
                }
              }
            }


            async function handle2FASubmit(button, url, successMessage, modal) {
              const token = modal.querySelector('input[name="token"]').value;
              try {
                const response = await fetch(url, {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ token })
                });
                const result = await response.json();
                if (result.success) {
                  toastr.success(successMessage);
                  modal.style.display = 'none';
                  button.textContent = result.success ? 'Disable 2FA' : 'Enable 2FA';
                  location.reload();
                } else {
                  toastr.error('Invalid code.');
                }
              } catch (error) {
                console.error('Error:', error);
                toastr.error('Something went wrong. Please try again.');
              }
            }

            document.body.addEventListener('click', function (event) {
              if (event.target.matches('#changeEmailBTN')) {
                handleEmailUpdate();
              }
            });

            function handleEmailUpdate() {
              const changeEmailForm = document.getElementById('changeEmailForm');
              const changeEmailBTN = document.getElementById('changeEmailBTN');
              const changeEmailModal = document.querySelector('.changeEmailModal');
              const verificationCodeModal = document.querySelector('.verificationCodeModal');

              if (changeEmailForm && changeEmailBTN) {
                if (!changeEmailBTN.hasListenerAttached) {
                  changeEmailBTN.addEventListener('click', async function (e) {

                    if (!changeEmailForm.checkValidity()) {
                      changeEmailForm.reportValidity();
                    }

                    const newEmail = document.getElementById('changeEmail').value;
                    const currentPassword = document.getElementById('currentPassword').value;

                    changeEmailBTN.disabled = true;
                    changeEmailBTN.textContent = 'Processing...';

                    try {
                      const response = await fetch('/changeEmail', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ newEmail, currentPassword })
                      });

                      const result = await response.json();

                      if (result.success) {
                        changeEmailModal.classList.remove('!block');
                        verificationCodeModal.classList.add('!block');
                        toastr.success('Verification code sent. Please check your email.');
                      } else {
                        if (result.error === 'email_exists') {
                          toastr.error('Email already exists.');
                        } else if (result.error === 'incorrect_password') {
                          toastr.error('Incorrect password.');
                        }
                      }
                    } catch (error) {
                      console.error('Error:', error);
                      toastr.error('Something went wrong. Please try again.');
                    } finally {
                      // Restore button state
                      changeEmailBTN.disabled = false;
                      changeEmailBTN.textContent = 'Add';
                    }
                  });

                  changeEmailBTN.hasListenerAttached = true;
                }
              }
            }

            document.getElementById('verifyCodeForm').addEventListener("submit", async function (e) {
              e.preventDefault();

              const verificationCode = document.getElementById("verificationCode").value.trim();
              const verifyBTN = document.getElementById('verifyBTN');

              if (!verificationCode) {
                toastr.error('Verification code cannot be empty.');
                return;
              }

              const data = {
                verificationCode,
              }

              verifyBTN.disabled = true;
              verifyBTN.textContent = 'Verifying...';

